@using Microsoft.AspNet.Identity
@{ 
    ViewBag.Styles = "max-width: 200px; overflow-x: hidden; text-overflow: ellipsis;";
}

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOut", "Home", FormMethod.Post, new { id = "logOutForm", style = "display:flex" }))
    {
        @Html.AntiForgeryToken()

        <li class="nav-item">
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Profile", null, new { @class = "nav-item-child nav-item-hover", style = ViewBag.Styles })
        </li>

        <li class="nav-item">
            <a class="nav-item-child nav-item-hover" href="javascript:void(0);" onclick="logOut()">Выйти</a>
        </li>
    }
}
else
{
    <li class="nav-item">
        <a class="nav-item-child nav-item-hover" data-toggle="modal" data-target="#login" cursor="pointer" href="">Вход</a>
    </li>

    <li class="nav-item">
        <a class="nav-item-child nav-item-hover" data-toggle="modal" data-target="#register" cursor="pointer" href="">Регистрация</a>
    </li>
}