@{
    if (!IsAjax)
    {

        Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    }

    ViewBag.Title = "Изменение фотографии";
}

<div class="property-title">
    <h2>@ViewBag.Title</h2>
</div>
<hr />

@using (Ajax.BeginForm("ChangeAvatar", null, new AjaxOptions { UpdateTargetId = "property", HttpMethod = "Post" }, new { @class = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("image-upload", "Загрузка изображения", new { @class = "control-label" })
    </div>

    <div class="form-group">
        <input id="image-upload" name="image" type="file" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Изменить</button>
    </div>
}

@Ajax.ActionLink("Вернуться назад", "Setting", null, new AjaxOptions { UpdateTargetId = "property", HttpMethod = "Get" }, new { @class = "btn btn-primary", style = "float:left" })