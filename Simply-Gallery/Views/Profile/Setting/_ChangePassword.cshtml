@using Simply_Gallery.ViewModels
@model ChangePasswordViewModel
@{
    if (!IsAjax)
    {
        Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    }

    ViewBag.Title = "Изменение пароля";
}

<div class="property-title">
    <h2>@ViewBag.Title</h2>
</div>

<hr />

@using (Ajax.BeginForm("ChangePassword", null, new AjaxOptions { UpdateTargetId = "property", HttpMethod = "Post" }, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Введите старый пароль" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Введите новый пароль" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Введите повторно новый пароль" })
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Изменить</button>
    </div>
}

@Ajax.ActionLink("Вернуться назад", "Setting", null, new AjaxOptions { UpdateTargetId = "property", HttpMethod = "Get" }, new { @class = "btn btn-primary", style = "float:left" })