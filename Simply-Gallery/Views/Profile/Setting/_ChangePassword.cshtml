@using Simply_Gallery.ViewModels
@model ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";

    if (!IsAjax)
    {
        Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    }
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Ajax.BeginForm("ChangePassword", null, new AjaxOptions { UpdateTargetId = "property" }, new { @class = "form form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Введите старый пароль" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Введите новый пароль" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Введите повторно новый пароль" })
    </div>

    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-primary" />
    </div>
}

@Ajax.ActionLink("Вернуться назад", "Setting", null, new AjaxOptions { UpdateTargetId = "property" }, new { @class = "btn btn-primary", style = "float:left" })