@using Simply_Gallery.ViewModels
@model ChangeEmailViewModel
@{
    if (!IsAjax)
    {
        Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    }

    ViewBag.Title = "Изменение почты";
}

<div class="property-title">
    <h2>@ViewBag.Title</h2>
</div>
<hr />

@using (Ajax.BeginForm("ChangeEmail", null, new AjaxOptions { UpdateTargetId = "property", HttpMethod = "Post" }, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.CurrentEmail, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.CurrentEmail, new { @class = "form-control", @readonly = "" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NewEmail, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.NewEmail, new { @class = "form-control", placeholder = "Введите новый e-mail адрес" })
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Изменить</button>
    </div>
}

@Ajax.ActionLink("Вернуться назад", "Setting", null, new AjaxOptions { UpdateTargetId = "property", HttpMethod = "Get" }, new { @class = "btn btn-primary", style = "float:left" })