@using Simply_Gallery.ViewModels
@model ProfileViewModel

<div id="header">
    <div class="top">
        <!-- Logo -->
        <div id="logo">
            
            <div class="image">
                <a href="@Url.Action("Setting", new { act = "changeAvatar" })">
                    @if (!Model.UserIsImage)
                    {
                        <img src="@Url.Content("~/Content/profile/img/user.svg")" alt="аватар" title="default" />
                    }
                    else
                    {
                        <img src="@Url.Action("GetUserPhoto")" alt="аватар" title="@Model.UserName" />
                    }
                    <div class="overlay"></div>
                </a>
            </div>
            
            <div class="info">
                <h1>@Model.UserName</h1>
                @foreach (var role in Model.UserRoles)
                {
                    <p>@role</p>
                }
            </div>

        </div>

        <!-- Nav -->
        <nav id="nav">
            <ul>
                <li><a href="@Url.Action("Index", "Home")"><i class="icon fas fa-home">Домашняя</i></a></li>
                <li><a href="@Url.Action("Index")"><i class="icon fas fa-images">Мои альбомы <span class="badge">@Model.CountAlbum</span></i></a></li>
                <li><a href="@Url.Action("Setting")"><i class="icon fas fa-users-cog">Мои настройки</i></a></li>
                @if (User.IsInRole("admin"))
                {
                    <li><a href="@Url.Action("Index", "Admin")"><i class="icon fas fa-chess-queen">Admin панель</i></a></li>
                }
                @using (Html.BeginForm("LogOut", "Home", FormMethod.Post, new { id = "logOutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <li>
                        <a href="javascript:void(0);" onclick="javascript:document.getElementById('logOutForm').submit()"><i class="icon fas fa-sign-out-alt">Выход</i></a>
                    </li>
                }
            </ul>
        </nav>
    </div>

    <div class="bottom">
        <!-- Social Icons -->
        <ul class="icons">
            <li><a href="https://vk.com/osipykr" class="icon"><i class="fab fa-vk"></i><span class="label">VK</span></a></li>
            <li><a href="https://github.com/fredstone624" class="icon"><i class="fab fa-github"></i><span class="label">Github</span></a></li>
            <li><a href="http://www.bstu.by/" class="icon"><i class="fas fa-university"></i><span class="label">University</span></a></li>
            <li><a href="mailto:fredstone624@gmail.com" class="icon"><i class="fas fa-envelope"></i><span class="label">Email</span></a></li>
        </ul>

    </div>
</div>