@using Simply_Gallery.ViewModels
@model CreateRoleViewModel
@{
    Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    ViewBag.Title = "Создание новой роли";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("Create", "Roles", FormMethod.Post, new { @class = "form-horizontal", role = "form", style = "text-align: left" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder  = "Введите имя новой роли"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Введите описание новой роли" })
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
}

<button class="btn btn-primary" onclick="location.href='@Url.Action("Index")'" style="float:left">Вернуться назад</button>