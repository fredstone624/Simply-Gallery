@using Simply_Gallery.ViewModels
@model UsersRoleViewModel
@{
    Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    ViewBag.Title = "Список пользователей";
}

<h2>@ViewBag.Title с ролью "@Model.Name"</h2>
<hr />

<table class="table" style="text-align:left">
    <thead>
        <tr>
            <th>Почта</th>
            <th>Имя пользователя</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.UserName</td>
            </tr>
        }
    </tbody>
</table>

<hr />
<button class="btn btn-primary" onclick="location.href='@Url.Action("Index")'" style="float:left">Вернуться назад</button>