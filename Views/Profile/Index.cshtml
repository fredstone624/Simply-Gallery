@using Simply_Gallery.Models.Gallery;
@model IEnumerable<Album>
@{
    Layout = "Shared/_Layout.cshtml";
    ViewBag.Title = "Мои альбомы";
}

<div class="title">
    <h2>Список всех альбомов</h2>
</div>

@if (Model.Count() == 0)
{
    <div class="album-null">
        <p>У вас пока нету альбомов ;(</p>
        <img src="~/Content/profile/img/empty-album.jpg" alt=":(" title="Альбомов нет" />
    </div>
}
else
{
    <div class="albums" style=@(Model.Count() < 3 ? "justify-content:space-around" : "")>
        @foreach (var album in Model)
        {
            <div class="album">
                <div class="album-image"><img src="~/Content/profile/img/album-image.png" alt="Фото альбома" title="Фото альбома"></div>
                <div class="album-name"><h3 title="Название альбома">@album.Name</h3></div>
                <div class="album-butt">
                    <a href="@Url.Action("Album", new { albumId = album.Id })" title="Пеерйти"><i class="far fa-arrow-alt-circle-right"></i></a>
                    <a href="#" title="Изменить"><i class="far fa-edit"></i></a>
                    <a href="@Url.Action("DeleteAlbum", new { albumId = album.Id })" title="Удалить"><i class="far fa-trash-alt"></i></a>
                </div>
            </div>
        }
    </div>
}

<div class="add">
    <p>Хотите создать новый альбом ?</p>
    @Html.ActionLink("Создать", "AddAlbum")
</div>