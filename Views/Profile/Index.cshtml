@using Simply_Gallery.Models.Gallery;
@model IEnumerable<Album>
@{
    Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    ViewBag.Title = "Мои альбомы";
    ViewBag.TitleDelete = "альбом";
}

<div class="title">
    <h2>Список всех альбомов</h2>
</div>
<hr />

<p class="text-success" style="text-align:left">@ViewBag.StatusMessage</p>

@if (Model.Count() == 0)
{
    <div class="album-null">
        <p>У вас пока нету альбомов ;(</p>
        <img src="@Url.Content("~/Content/profile/img/empty-album.jpg")" alt=":(" title="Альбомов нет" />
    </div>
}
else
{
    <div class="albums" style=@(Model.Count() < 3 ? "justify-content:space-around" : "")>
        @foreach (var album in Model)
        {
            <div class="album">

                <div class="album-image">
                    <a href="@Url.Action("Album", new { albumId = album.Id })">
                        <img src="@Url.Content("~/Content/profile/img/album-image.png")" alt="Фото альбома" title="Фото альбома">
                    </a>
                </div>

                <div class="album-name" style="cursor:default">
                    <h3 title="Название альбома">@album.Name</h3>
                </div>
                <div class="album-butt">
                    <a href="@Url.Action("Album", new { albumId = album.Id })" title="Перейти к альбому"><i class="far fa-arrow-alt-circle-right"></i></a>
                    <a href="@Url.Action("EditAlbum", new { albumId = album.Id })" title="Изменить альбом"><i class="far fa-edit"></i></a>
                    <a onclick="deleteAction('@Url.Action("DeleteAlbum", new { albumId = album.Id })')" data-toggle="modal" data-target="#deleteModal" title="Удалить альбом" style="cursor:pointer"><i class="far fa-trash-alt"></i></a>
                </div>

            </div>
        }
    </div>
}

<hr />
<div class="add">
    <p>Хотите создать новый альбом ?</p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("AddAlbum")'">Создать</button>
</div>

@Html.Partial("Shared/_Delete")