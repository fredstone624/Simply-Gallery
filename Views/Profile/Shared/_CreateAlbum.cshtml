@model Simply_Gallery.Models.AlbumModel
@{
    ViewBag.ModalTitle = "Создание нового альбома";
}

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span class="fweight-700 color-heading" aria-hidden="true">&Chi;</span>
            </button>
            <h4 class="modal-title" id="createAlbumTitle">@ViewBag.ModalTitle</h4>
        </div>
        <div class="modal-body">
            @using (Ajax.BeginForm("CreateAlbum", null, new AjaxOptions { UpdateTargetId = "property", HttpMethod = "Post" }, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-froup">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Введите название альбома" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "form-text text-muted text-danger" })
                </div>

                <input type="submit" class="btn btn-primary pull-right" value="Создать" />
            }
        </div>
    </div>
</div>