@using Simply_Gallery.ViewModels
@model EditAlbumViewModel
@{
    Layout = "~/Views/Profile/Shared/_Layout.cshtml";
    ViewBag.Title = "Редактирование альбома";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("EditAlbum", "Profile", FormMethod.Post, new { @class = "form form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.OldName)

    <div class="form-group">
        @Html.LabelFor(m => m.NewName, new { @class = "control-label" })
        @Html.EditorFor(m => m.NewName)
    </div>

    <div class="form-group">
        <input type="submit" value="Изменить" class="btn btn-primary" />
    </div>
}

<button class="btn btn-primary" onclick="location.href='@Url.Action("Index")'" style="float:left">Вернуться назад</button>