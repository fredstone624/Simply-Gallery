@using Simply_Gallery.ViewModels
@model PhotoViewModel
@{
    ViewBag.Title = "Добавление фотографии в альбом";
    Layout = "~/Views/Profile/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddPhoto", "Profile", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data", style = "text-align: left" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CurrentAlbumId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="form-froup">
        @Html.LabelFor(m => m.Image)
        @Html.TextBoxFor(m => m.Image, new { type = "file" })
        @Html.ValidationMessageFor(m => m.Image, "", new { @class = "form-text text-muted text-danger" })
    </div>

    <input type="submit" class="btn btn-primary" value="Добавить" />
}